server:
  port: 8090
spring:
  datasource:
    type: com.zaxxer.hikari.HikariDataSource
    driver-class-name: org.h2.Driver
    url: jdbc:h2:file:~/.halo/db/halo
    username: admin
    password: 123456

  # H2 Database 的控制台相关配置。
  h2:
    console:
      settings:
        web-allow-others: false
      path: /h2-console
      enabled: false
